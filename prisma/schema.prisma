generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  identifier String?
  token      String
  expires    DateTime

  @@unique([email, token])
}

model Authenticator {
  credentialID         String  @id @map("_id")
  userId               String  @db.ObjectId
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, credentialID])
}

model User {
  id                      String          @id @default(auto()) @map("_id") @db.ObjectId
  name                    String?
  email                   String          @unique
  country                 String?
  phonenumber             String?
  emailVerified           DateTime?
  image                   String?
  password                String?
  notificationPreferences Json? // e.g., { "email": true, "sms": false }
  role                    Role            @default(USER)
  accounts                Account[]
  sessions                Session[]
  Authenticator           Authenticator[]
  devices                 Device[]
  channels                Channel[]
  apiKeys                 ApiKey[]
  payments                Payment[]
  feedbackReplies         FeedbackReply[]
  subscriptionId          String?         @db.ObjectId
  organizationId          String?         @db.ObjectId
  subscription            Subscription?   @relation(fields: [subscriptionId], references: [id])
  organization            Organization?   @relation(fields: [organizationId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  Invoice   Invoice[]
}

model Organization {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  address        String?
  type           OrganizationType @default(PERSONAL)
  industry       String?
  employeeCount  String?
  contactName    String?
  email          String?
  jobTitle       String?
  phoneNumber    String?
  country        String?
  deviceCount    String?
  areaOfInterest String[]
  userId         String?          @db.ObjectId
  users          User[]
  members        Member[]
  payments       Payment[]
  feedbacks      Feedback[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt()
  Channel        Channel[]
  Device         Device[]
  Field          Field[]
  DataPoint      DataPoint[]
  ApiKey         ApiKey[]
  SampleCodes    SampleCodes[]
  Subscription   Subscription[]
  ContactSales   ContactSales[]

  @@index([userId])
}

model Member {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  phone          String?
  avatar         String?
  address        Json?
  access         MemberAccess @default(VIEWER)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@unique([email, organizationId])
}

model Device {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  deviceType     DeviceType?
  authToken      String      @unique // auth token
  connectionInfo Json?
  model          String?
  firmware       String?
  config         Json?
  metadata       Json?
  ipAddress      String?
  macAddress     String?
  lastPing       DateTime?
  batteryLevel   Float?
  signal         Float?
  location       Json?

  userId         String       @db.ObjectId
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id])
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id])
  status         DeviceStatus @default(OFFLINE)

  // Virtual pins data
  virtualPins VirtualPin[]

  // Events and logs
  events      DeviceEvent[]
  logs        DeviceLog[]
  history     PinHistory[]
  sensors     Sensor[]
  automations DeviceAutomation[]
  alerts      DeviceAlert[]
  commands    DeviceCommand[]
  maintenance MaintenanceLog[]
  schedules   Schedule[]
  widgets     Widget[]

  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt()
  PinConfig        PinConfig[]
  NotificationRule NotificationRule[]

  @@index([organizationId])
  @@index([channelId])
  @@index([userId])
}

model DeviceEvent {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  eventCode String // "sensor_alert", "connection_lost", etc.
  message   String
  severity  EventSeverity @default(INFO)
  data      Json? // Additional event data
  processed Boolean       @default(false)

  deviceId String @db.ObjectId
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("device_events")
}

model DeviceLog {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  level   LogLevel @default(INFO)
  message String
  data    Json?

  deviceId String @db.ObjectId
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("device_logs")
}

model VirtualPin {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  pinNumber   Int // V0, V1, V2, etc. (store as 0, 1, 2)
  value       String? // Store as string, convert as needed
  dataType    PinDataType @default(STRING)
  lastUpdated DateTime    @default(now())

  deviceId String @db.ObjectId
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  // Pin configuration
  config Json? // Store widget config, min/max values, etc.

  @@unique([deviceId, pinNumber])
  @@map("virtual_pins")
}

model PinHistory {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  deviceId  String      @db.ObjectId
  device    Device      @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  pinNumber Int
  value     String
  dataType  PinDataType
  timestamp DateTime    @default(now())

  createdAt DateTime @default(now())

  @@index([deviceId, pinNumber, createdAt])
  @@map("pin_history")
}

model PinConfig {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  widgetId       String   @db.ObjectId
  deviceId       String   @db.ObjectId
  device         Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  title          String?
  pinType        String?
  widgetType     String? // "VIRTUAL", "DIGITAL", "ANALOG"
  pinNumber      String
  valueType      String? // "BOOLEAN", "NUMBER", "STRING"
  defaultValue   Json?
  minValue       Float?
  maxValue       Float?
  onValue        String? // Value when pin is "on"
  offValue       String? // Value when pin is "off"
  widgetColor    String?
  automationType String?
  showLabels     Boolean  @default(false)
  hideWidgetName Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  Widget         Widget[]

  @@index([deviceId])
}

model Sensor {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String
  minThreshold Float? // Minimum threshold for alerts
  maxThreshold Float? // Maximum threshold for alerts
  value        Float    @default(0.0)
  deviceId     String   @db.ObjectId
  device       Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model DeviceAutomation {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  deviceId    String             @db.ObjectId
  device      Device             @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  type        AutomationType
  condition   Json // Trigger conditions
  action      Json // Actions to perform
  status      AutomationStatus   @default(ACTIVE)
  schedule    String? // Cron expression for scheduled automations
  priority    AutomationPriority @default(MEDIUM)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  lastRun   DateTime?
  nextRun   DateTime?

  @@index([deviceId])
}

model DeviceAlert {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  deviceId   String        @db.ObjectId
  device     Device        @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  type       AlertType
  severity   AlertSeverity
  message    String
  status     AlertStatus   @default(ACTIVE)
  metadata   Json?
  resolvedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([deviceId])
}

model DeviceCommand {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  deviceId   String        @db.ObjectId
  device     Device        @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  type       CommandType
  payload    Json
  status     CommandStatus @default(PENDING)
  response   Json?
  executedAt DateTime?
  error      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([deviceId])
}

model MaintenanceLog {
  id           String            @id @default(auto()) @map("_id") @db.ObjectId
  deviceId     String            @db.ObjectId
  device       Device            @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  type         MaintenanceType
  status       MaintenanceStatus @default(PENDING)
  description  String?
  performedBy  String?
  scheduledFor DateTime?
  completedAt  DateTime?
  notes        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([deviceId])
}

model Schedule {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  deviceId       String         @db.ObjectId
  device         Device         @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  cronExpression String // For recurring schedules
  action         Json
  status         ScheduleStatus @default(ACTIVE)
  lastRun        DateTime?
  nextRun        DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([deviceId])
}

model Channel {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String?
  connectionType  String?
  hardware        String?
  mqttBrokerUrl   String? // MQTT broker URL
  mqttTopic       String? // MQTT topic for this channel
  access          Access          @default(PRIVATE)
  widgets         Widget[]
  fields          Field[]
  dataPoints      DataPoint[]
  channelAccesses ChannelAccess[]
  userId          String          @db.ObjectId
  user            User            @relation(fields: [userId], references: [id])
  organizationId  String          @db.ObjectId
  organization    Organization    @relation(fields: [organizationId], references: [id])
  apiKeys         ApiKey[]
  devices         Device[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt()
  SampleCodes SampleCodes[]

  @@index([userId])
  @@index([organizationId])
}

model ChannelAccess {
  id         String            @id @default(auto()) @map("_id") @db.ObjectId
  userEmail  String
  ownerEmail String
  ownerImage String?
  ownerName  String
  channelId  String            @db.ObjectId
  channel    Channel           @relation(fields: [channelId], references: [id], onDelete: Cascade)
  accessType ChannelAccessType
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@index([channelId])
}

model Widget {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  value      String?
  type       String?
  dataSource Json?
  display    Json?
  definition Json?
  position   Json?
  settings   Json?
  color      String?
  deviceId   String     @db.ObjectId
  device     Device     @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  channelId  String     @db.ObjectId
  channel    Channel    @relation(fields: [channelId], references: [id])
  pinConfig  PinConfig? @relation(fields: [pinConfigId], references: [id])

  widgetType String? // "button", "slider", "gauge", "chart", etc.
  pinNumber  Int?
  pinType    String? // "virtual", "digital", "analog"
  config     Json? // Widget-specific configuration  
  isActive   Boolean @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
  pinConfigId String?  @db.ObjectId

  @@index([deviceId])
  @@index([channelId])
}

model Field {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  dataPoints     DataPoint[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([channelId])
  @@index([organizationId])
}

model DataPoint {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  timestamp      DateTime     @default(now())
  value          Float
  fieldId        String       @db.ObjectId
  field          Field        @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([fieldId])
  @@index([channelId])
  @@index([organizationId])
}

model ApiKey {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  apiKey         String        @unique
  userId         String        @db.ObjectId
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId      String        @db.ObjectId
  channel        Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String        @db.ObjectId
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  fields         String[]
  expiresAt      DateTime?
  SampleCodes    SampleCodes[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([userId])
  @@index([channelId])
  @@index([organizationId])
}

model SampleCodes {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  codes          String
  apiKeyId       String       @db.ObjectId
  apiKey         ApiKey       @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt()

  @@index([apiKeyId])
  @@index([channelId])
  @@index([organizationId])
}

model PricingTier {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  description        String?
  price              Float
  type               SubscriptionType
  billingCycle       BillingCycleType
  maxChannels        Int
  maxMessagesPerYear Int
  features           String[]
  subscriptions      Subscription[]
  activation         Boolean          @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  Payment   Payment[]
}

model Subscription {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  description        String?
  type               SubscriptionType
  status             SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean            @default(false)
  pricingTierId      String             @db.ObjectId
  pricingTier        PricingTier        @relation(fields: [pricingTierId], references: [id])
  users              User[]
  organizationId     String?            @db.ObjectId
  organization       Organization?      @relation(fields: [organizationId], references: [id])
  paymentIntentId    String?            @db.ObjectId

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  Invoice   Invoice[]
}

model Payment {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  amount   Float
  currency String        @default("RWF")
  status   PaymentStatus @default(PENDING)
  type     PaymentType

  // Credit card specific fields
  cardLastFour    String?
  cardExpiryMonth String?
  cardExpiryYear  String?
  cardHolderName  String?
  description     String?

  // Mobile money specific fields
  phoneNumber   String?
  provider      PaymentProvider?
  transactionId String?          @unique

  // Common metadata
  metadata     Json?
  errorMessage String?

  // Relations
  userId         String        @db.ObjectId
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id])
  pricingTierId  String        @db.ObjectId
  pricingTier    PricingTier   @relation(fields: [pricingTierId], references: [id])
  invoiceId      String?       @db.ObjectId
  invoice        Invoice?      @relation(fields: [invoiceId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([userId])
  @@index([organizationId])
  @@index([invoiceId])
}

model Invoice {
  id                 String            @id @default(auto()) @map("_id") @db.ObjectId
  userId             String            @db.ObjectId
  user               User              @relation(fields: [userId], references: [id])
  subscriptionId     String            @db.ObjectId
  subscription       Subscription      @relation(fields: [subscriptionId], references: [id])
  amount             Float
  status             InvoiceStatus
  stripeChargeId     String?
  paymentMethod      String
  paymentType        PaymentMethodType
  lastFourCardDigits String?
  expiryDate         DateTime?
  paidAt             DateTime?
  payments           Payment[]
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt()
}

model ContactSales {
  id             String             @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String
  lastName       String
  workEmail      String
  jobTitle       String
  phoneNumber    String
  expectedUsers  String
  message        String?
  status         ContactSalesStatus @default(PENDING)
  organizationId String?            @db.ObjectId
  organization   Organization?      @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([organizationId])
}

model Feedback {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  subject        String
  message        String
  status         FeedbackStatus  @default(PENDING)
  organizationId String?         @db.ObjectId
  organization   Organization?   @relation(fields: [organizationId], references: [id])
  replies        FeedbackReply[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
}

model FeedbackReply {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  message    String
  feedbackId String   @db.ObjectId
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([feedbackId])
  @@index([userId])
}

model NotificationRule {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  deviceId String @db.ObjectId
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  name      String
  condition Json // {pin, operator, value, logic}
  actions   Json // {email, sms, webhook, etc.}

  isActive      Boolean   @default(true)
  lastTriggered DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notification_rules")
}

enum DeviceType {
  SENSOR
  ACTUATOR
  GATEWAY
  CONTROLLER
  OTHER
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
  ERROR
  DISABLED
}

enum PinDataType {
  STRING
  INTEGER
  FLOAT
  BOOLEAN
}

enum EventSeverity {
  INFO
  WARNING
  ERROR
  CRITICAL
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}

enum AutomationType {
  SCHEDULED
  CONDITIONAL
  TRIGGER
  SEQUENCE
}

enum AutomationStatus {
  ACTIVE
  PAUSED
  DISABLED
}

enum AutomationPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertType {
  SYSTEM
  SECURITY
  PERFORMANCE
  CONNECTIVITY
  CUSTOM
}

enum AlertSeverity {
  INFO
  WARNING
  ERROR
  CRITICAL
}

enum AlertStatus {
  ACTIVE
  ACKNOWLEDGED
  RESOLVED
}

enum CommandType {
  POWER
  RESET
  UPDATE
  CONFIGURE
  CUSTOM
}

enum CommandStatus {
  PENDING
  SENT
  DELIVERED
  EXECUTED
  FAILED
  TIMEOUT
}

enum MaintenanceType {
  ROUTINE
  REPAIR
  UPDATE
  INSPECTION
  EMERGENCY
}

enum MaintenanceStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ScheduleStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
}

enum BillingCycleType {
  MONTHLY
  YEARLY
}

enum PaymentMethodType {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
}

enum InvoiceStatus {
  PAID
  UNPAID
  VOID
}

enum Role {
  USER
  ADMIN
}

enum MemberAccess {
  VIEWER
  COMMENTER
  EDITOR
}

enum Access {
  PUBLIC
  PRIVATE
}

enum ChannelAccessType {
  VIEWER
  EDITOR

  @@map("AccessType")
}

enum OrganizationType {
  PERSONAL
  ENTREPRISE
}

enum SubscriptionType {
  FREE
  PREMIUM
  ENTERPRISE
}

enum PaymentType {
  CREDIT_CARD
  MOBILE_MONEY
}

enum PaymentProvider {
  MTN
  AIRTEL
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
  CANCELLED
}

enum ContactSalesStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  REJECTED
}

enum FeedbackStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}
