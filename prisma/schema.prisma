generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  identifier String?
  token      String
  expires    DateTime

  @@unique([email, token])
}

model Authenticator {
  credentialID         String  @id @map("_id")
  userId               String  @db.ObjectId
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, credentialID])
}

model User {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String          @unique
  country         String?
  phonenumber     String?
  emailVerified   DateTime?
  image           String?
  password        String?
  role            Role            @default(USER)
  accounts        Account[]
  sessions        Session[]
  Authenticator   Authenticator[]
  devices         Device[]
  channels        Channel[]
  apiKeys         ApiKey[]
  payments        Payment[]
  feedbackReplies FeedbackReply[]
  subscriptionId  String?         @db.ObjectId
  organizationId  String?         @db.ObjectId
  subscription    Subscription?   @relation(fields: [subscriptionId], references: [id])
  organization    Organization?   @relation(fields: [organizationId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  Invoice   Invoice[]
}

model Organization {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  address        String?
  type           OrganizationType @default(PERSONAL)
  industry       String?
  employeeCount  String?
  contactName    String?
  email          String?
  jobTitle       String?
  phoneNumber    String?
  country        String?
  deviceCount    String?
  areaOfInterest String[]
  userId         String?          @db.ObjectId
  users          User[]
  members        Member[]
  payments       Payment[]
  feedbacks      Feedback[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt()
  Channel      Channel[]
  Device       Device[]
  Field        Field[]
  DataPoint    DataPoint[]
  ApiKey       ApiKey[]
  SampleCodes  SampleCodes[]
  Subscription Subscription[]
  ContactSales ContactSales[]

  @@index([userId])
}

model Member {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  phone          String?
  country        String?
  avatar         String?
  access         MemberAccess @default(VIEWER)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@unique([email, organizationId])
}

model Device {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  userId         String       @db.ObjectId
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id])
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id])
  status         DeviceStatus @default(OFFLINE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([organizationId])
  @@index([channelId])
  @@index([userId])
}

model Channel {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String?
  access          Access          @default(PRIVATE)
  fields          Field[]
  dataPoints      DataPoint[]
  channelAccesses ChannelAccess[]
  userId          String          @db.ObjectId
  user            User            @relation(fields: [userId], references: [id])
  organizationId  String          @db.ObjectId
  organization    Organization    @relation(fields: [organizationId], references: [id])
  apiKeys         ApiKey[]
  devices         Device[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt()
  SampleCodes SampleCodes[]

  @@index([userId])
  @@index([organizationId])
}

model ChannelAccess {
  id         String            @id @default(auto()) @map("_id") @db.ObjectId
  userEmail  String
  ownerEmail String
  ownerImage String?
  ownerName  String
  channelId  String            @db.ObjectId
  channel    Channel           @relation(fields: [channelId], references: [id], onDelete: Cascade)
  accessType ChannelAccessType
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  @@index([channelId])
}

model Field {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  dataPoints     DataPoint[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([channelId])
  @@index([organizationId])
}

model DataPoint {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  timestamp      DateTime     @default(now())
  value          Float
  fieldId        String       @db.ObjectId
  field          Field        @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([fieldId])
  @@index([channelId])
  @@index([organizationId])
}

model ApiKey {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  apiKey         String        @unique
  userId         String        @db.ObjectId
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  channelId      String        @db.ObjectId
  channel        Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String        @db.ObjectId
  organization   Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  fields         String[]
  expiresAt      DateTime?
  SampleCodes    SampleCodes[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([userId])
  @@index([channelId])
  @@index([organizationId])
}

model SampleCodes {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  codes          String
  apiKeyId       String       @db.ObjectId
  apiKey         ApiKey       @relation(fields: [apiKeyId], references: [id], onDelete: Cascade)
  channelId      String       @db.ObjectId
  channel        Channel      @relation(fields: [channelId], references: [id], onDelete: Cascade)
  organizationId String       @db.ObjectId
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt()

  @@index([apiKeyId])
  @@index([channelId])
  @@index([organizationId])
}

model PricingTier {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  description        String?
  price              Float
  type               SubscriptionType
  billingCycle       BillingCycleType
  maxChannels        Int
  maxMessagesPerYear Int
  features           String[]
  subscriptions      Subscription[]
  activation         Boolean          @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Subscription {
  id                 String             @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  description        String?
  type               SubscriptionType
  status             SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean            @default(false)
  pricingTierId      String             @db.ObjectId
  pricingTier        PricingTier        @relation(fields: [pricingTierId], references: [id])
  users              User[]
  organizationId     String?            @db.ObjectId
  organization       Organization?      @relation(fields: [organizationId], references: [id])
  paymentIntentId    String?            @db.ObjectId

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  Invoice   Invoice[]
}

model Payment {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  amount      Float
  currency    String           @default("RWF")
  status      PaymentStatus    @default(PENDING)
  type        PaymentType
  provider    PaymentProvider?
  description String?

  // Credit card specific fields
  cardLastFour    String?
  cardExpiryMonth String?
  cardExpiryYear  String?
  cardHolderName  String?

  // Mobile money specific fields
  phoneNumber   String?
  transactionId String? @unique

  // Common metadata
  metadata     Json?
  errorMessage String?

  // Relations
  userId         String        @db.ObjectId
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationId String?       @db.ObjectId
  organization   Organization? @relation(fields: [organizationId], references: [id])
  invoiceId      String?       @db.ObjectId
  invoice        Invoice?      @relation(fields: [invoiceId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([userId])
  @@index([organizationId])
  @@index([invoiceId])
}

model Invoice {
  id                 String            @id @default(auto()) @map("_id") @db.ObjectId
  userId             String            @db.ObjectId
  user               User              @relation(fields: [userId], references: [id])
  subscriptionId     String            @db.ObjectId
  subscription       Subscription      @relation(fields: [subscriptionId], references: [id])
  amount             Float
  status             InvoiceStatus
  stripeChargeId     String
  paymentMethod      String
  paymentType        PaymentMethodType
  lastFourCardDigits String?
  expiryDate         DateTime?
  paidAt             DateTime?
  payments           Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model ContactSales {
  id             String             @id @default(auto()) @map("_id") @db.ObjectId
  firstName      String
  lastName       String
  workEmail      String
  jobTitle       String
  phoneNumber    String
  expectedUsers  String
  message        String?
  status         ContactSalesStatus @default(PENDING)
  organizationId String?            @db.ObjectId
  organization   Organization?      @relation(fields: [organizationId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@index([organizationId])
}

model Feedback {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String
  subject        String
  message        String
  status         FeedbackStatus  @default(PENDING)
  organizationId String?         @db.ObjectId
  organization   Organization?   @relation(fields: [organizationId], references: [id])
  replies        FeedbackReply[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
}

model FeedbackReply {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  message    String
  feedbackId String   @db.ObjectId
  feedback   Feedback @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([feedbackId])
  @@index([userId])
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  UNPAID
}

enum BillingCycleType {
  MONTHLY
  YEARLY
}

enum PaymentMethodType {
  CREDIT_CARD
  PAYPAL
  BANK_TRANSFER
}

enum InvoiceStatus {
  PAID
  UNPAID
  VOID
}

enum Role {
  USER
  ADMIN
}

enum MemberAccess {
  VIEWER
  COMMENTER
  EDITOR
}

enum Access {
  PUBLIC
  PRIVATE
}

enum ChannelAccessType {
  VIEWER
  EDITOR

  @@map("AccessType")
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  DISCONNECTED
}

enum OrganizationType {
  PERSONAL
  ENTREPRISE
}

enum SubscriptionType {
  FREE
  PREMIUM
  ENTERPRISE
}

enum PaymentType {
  CREDIT_CARD
  MOBILE_MONEY
}

enum PaymentProvider {
  MTN
  AIRTEL
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
  CANCELLED
}

enum ContactSalesStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  REJECTED
}

enum FeedbackStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
  CLOSED
}
