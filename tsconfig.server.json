{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["server.ts", "lib/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "app/**/*",
    "pages/**/*",
    "components/**/*"
  ]
}
